# ============================================
# ATARAXIA FRONTEND CONFIGURATION
# ============================================

# API Configuration
VITE_API_BASE_URL=http://localhost:3010
VITE_API_TIMEOUT=30000

# Firebase Configuration (for authentication)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# AWS Cognito Configuration (alternative auth)
VITE_COGNITO_USER_POOL_ID=your_user_pool_id
VITE_COGNITO_CLIENT_ID=your_client_id
VITE_COGNITO_REGION=us-east-1

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# Role Configuration
# Default role for web platform registration (therapist | client)
VITE_DEFAULT_REGISTRATION_ROLE=therapist

# Allow manual role selection during registration (true | false)
# Set to false in production, true in development for testing
VITE_ALLOW_ROLE_SELECTION=false

# Environment
VITE_ENVIRONMENT=production

# Google Maps API (for address autocomplete)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Jitsi Configuration (for video calls)
VITE_JITSI_DOMAIN=meet.jit.si
VITE_JITSI_APP_ID=your_jitsi_app_id

# Feature Flags
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_PHONE_AUTH=true
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_MESSAGING=true

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_ANALYTICS=true

# Security
VITE_ENABLE_2FA=true
VITE_SESSION_TIMEOUT=1800000
